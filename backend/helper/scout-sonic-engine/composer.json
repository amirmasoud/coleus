{
    "name": "coleus/scout-sonic-engine",
    "description": "Scout custom engine for Sonic",
    "homepage": "https://github.com/coleusapp",
    "license": "MIT",
    "authors": [
        {
            "name": "Amirmasoud Sheydaei",
            "email": "amirmasoud@coleus.app",
            "homepage": "https://coleus.app",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.2",
        "laravel/scout": "^8.0",
        "php-sonic/php-sonic": "*",
        "laravel/helpers": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Coleus\\Sonic\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Coleus\\Sonic\\Providers\\SonicServiceProvider"
            ]
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "mockery/mockery": "^1.0"
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
